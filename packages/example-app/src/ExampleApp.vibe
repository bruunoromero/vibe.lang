module ExampleApp exposing (..)

-- Record type example
type alias Point =
  { x : Int
  , y : Int
  }

type CustomMaybe x
  = Just x
  | Nothing

-- Create a point
origin : Point
origin =
  { x = 0
  , y = 0
  }

-- Function using record type
distance : {x: Int, y:Int} -> Int
distance point =
  point.x * point.x + point.y * point.y

main =
  "Hello, Vibe!"

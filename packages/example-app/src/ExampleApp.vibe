module ExampleApp exposing (..)

import Vibe.Maybe exposing (withDefault)

-- Record type example
type alias Point =
  { x : Int
  , y : Int
  }

-- Create a point
origin : Point
origin =
  { x = 0
  , y = 0
  }

-- Function using record type
distance : {x: Int, y:Int} -> Int
distance point =
  point.x * point.x + point.y * point.y

main =
  let x = Just 10 in
  withDefault 0 x
module Vibe.Bool exposing
  ( toString
  , not
  , eq
  )

toString : Bool -> String
toString x =
  case x of
    True -> "True"
    False -> "False"

{-| Logical not. Inverts the boolean value.

    not True  == False
    not False == True
-}

@external "@vibe/runtime" "not"
not : Bool -> Bool

eq x y =
  case (x, y) of
    (True, True) -> True
    (False, False) -> True
    _ -> False
